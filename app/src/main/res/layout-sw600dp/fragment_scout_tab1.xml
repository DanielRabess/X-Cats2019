<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:windowSoftInputMode="stateAlwaysHidden">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_scouttab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ScoutTab1">

        <!-- TODO: Update blank fragment layout -->

        <RadioGroup
            android:id="@+id/startingPositionRBG"
            android:layout_width="417dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.745"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelOneRedBlock">

            <RadioButton
                android:id="@+id/startRadioButton1"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="200dp"
                android:layout_marginRight="84dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="1"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/startRadioButton2"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="68dp"
                android:layout_marginRight="8dp"
                android:text="2"
                android:textSize="25dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/matchNumberEditable"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="number"
            android:textCursorDrawable="@null"
            app:layout_constraintBottom_toBottomOf="@+id/matchNumberText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.647"
            app:layout_constraintStart_toEndOf="@+id/matchNumberText"
            app:layout_constraintTop_toTopOf="@+id/matchNumberText"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/matchNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Match Number"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/scoutingTeamText"
            app:layout_constraintTop_toBottomOf="@+id/scoutingTeamText" />

        <TextView
            android:id="@+id/scoutingTeamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="52dp"
            android:text="I'm scouting team:"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/robotPositionText"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:text="Robot Position"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/matchNumberText" />

        <TextView
            android:id="@+id/positionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:text="Starting Position"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allianceColorText" />

        <TextView
            android:id="@+id/startingPieceText"
            android:layout_width="176dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Starting Piece"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/allianceColorText"
            app:layout_constraintTop_toBottomOf="@+id/startingPositionRBG"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/allianceColorText"
            android:layout_width="176dp"
            android:layout_height="33dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="68dp"
            android:text="Alliance Color"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/matchNumberText"
            app:layout_constraintTop_toBottomOf="@+id/robotPositionRBG" />

        <Spinner
            android:id="@+id/teamNumberSpinner"
            android:layout_width="94dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#a3a3a3"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/scoutingTeamText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toEndOf="@+id/scoutingTeamText"
            app:layout_constraintTop_toTopOf="@+id/scoutingTeamText"
            app:layout_constraintVertical_bias="0.4" />

        <Spinner
            android:id="@+id/startingPieceSpinner"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#a3a3a3"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/startingPieceText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toEndOf="@+id/startingPieceText"
            app:layout_constraintTop_toTopOf="@+id/startingPieceText"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/levelOneRedBlock"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:src="@drawable/redsquare"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/levelOneBlueBlock"
            app:layout_constraintEnd_toEndOf="@+id/levelOneBlueBlock"
            app:layout_constraintTop_toTopOf="@+id/levelOneBlueBlock"
            app:layout_constraintBottom_toBottomOf="@+id/levelOneBlueBlock"
            />

        <ImageView
            android:id="@+id/levelTwoRedBlock"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/redsquare"
            app:layout_constraintStart_toStartOf="@id/levelTwoBlueBlock"
            app:layout_constraintEnd_toEndOf="@+id/levelTwoBlueBlock"
            app:layout_constraintTop_toTopOf="@+id/levelTwoBlueBlock"
            />


        <ImageView
            android:id="@+id/levelOneBlueBlock"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/bluesquare"
            app:layout_constraintEnd_toStartOf="@+id/levelTwoBlueBlock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/positionText" />

        <ImageView
            android:id="@+id/levelTwoBlueBlock"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/bluesquare"
            app:layout_constraintBottom_toBottomOf="@+id/levelOneBlueBlock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/levelOneBlueBlock" />


        <RadioGroup
            android:id="@+id/robotPositionRBG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/robotPositionText">

            <RadioButton
                android:id="@+id/positionRadioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="Left"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/positionRadioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Center"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/positionRadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="Right"
                android:textSize="25dp" />
        </RadioGroup>

        <Button
            android:id="@+id/allianceButtonColor"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="#dc3953"
            android:onClick="AllianceColorClick"
            android:text="RED"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/allianceColorText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.686"
            app:layout_constraintStart_toEndOf="@+id/allianceColorText"
            app:layout_constraintTop_toTopOf="@+id/allianceColorText"
            app:layout_constraintVertical_bias="0.266" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>