<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:windowSoftInputMode="stateAlwaysHidden">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_scouttab1"
    tools:context=".ScoutTab1">

    <!-- TODO: Update blank fragment layout -->

    <RadioGroup
        android:id="@+id/startingPositionRBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelOneRedBlock">

        <RadioButton
            android:id="@+id/startRadioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:text="1"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/startRadioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="8dp"
            android:text="2"
            android:textSize="25dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/matchNumberEditable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/matchNumberText"
        app:layout_constraintStart_toEndOf="@+id/matchNumberText" />

    <TextView
        android:id="@+id/matchNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp"
        android:text="Match Number"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/scoutingTeamText"
        app:layout_constraintTop_toBottomOf="@+id/scoutingTeamText" />

    <TextView
        android:id="@+id/scoutingTeamText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:text="I'm scouting team:"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/robotPositionText"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Robot Position"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/positionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Starting Position"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allianceColorText" />

    <TextView
        android:id="@+id/startingPieceText"
        android:layout_width="176dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:text="Starting Piece"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/allianceColorText"
        app:layout_constraintTop_toBottomOf="@+id/startingPositionRBG" />

    <TextView
        android:id="@+id/allianceColorText"
        android:layout_width="176dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="52dp"
        android:text="Alliance Color"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/matchNumberText"
        app:layout_constraintTop_toBottomOf="@+id/robotPositionRBG" />

    <Spinner
        android:id="@+id/teamNumberSpinner"
        android:layout_width="94dp"
        android:layout_height="39dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:background="#a3a3a3"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/scoutingTeamText"
        app:layout_constraintStart_toEndOf="@+id/scoutingTeamText" />

    <Spinner
        android:id="@+id/startingPieceSpinner"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#a3a3a3"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/startingPieceText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toEndOf="@+id/startingPieceText" />

    <ImageView
        android:id="@+id/levelOneRedBlock"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/redsquare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/positionText" />

    <ImageView
        android:id="@+id/levelTwoRedBlock"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/redsquare"
        app:layout_constraintBottom_toBottomOf="@+id/levelOneRedBlock"
        app:layout_constraintStart_toEndOf="@+id/levelOneRedBlock" />

    <ImageView
        android:id="@+id/levelOneBlueBlock"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/bluesquare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/positionText" />

    <ImageView
        android:id="@+id/levelTwoBlueBlock"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/bluesquare"
        app:layout_constraintBottom_toBottomOf="@+id/levelOneRedBlock"
        app:layout_constraintStart_toEndOf="@+id/levelOneRedBlock" />

    <RadioGroup
        android:id="@+id/robotPositionRBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/robotPositionText">

        <RadioButton
            android:id="@+id/positionRadioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Left"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/positionRadioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Center"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/positionRadioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Right"
            android:textSize="25dp" />
    </RadioGroup>

    <Button
        android:id="@+id/allianceButtonColor"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:background="#dc3953"
        android:onClick="AllianceColorClick"
        android:text="RED"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/allianceColorText"
        app:layout_constraintStart_toEndOf="@+id/allianceColorText" />


</android.support.constraint.ConstraintLayout>
</ScrollView>