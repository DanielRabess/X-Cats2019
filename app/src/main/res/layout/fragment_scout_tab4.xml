<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:windowSoftInputMode="stateAlwaysHidden">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoutTab4">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Endgame"
        android:textSize="35dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lvlClimbed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Level Climbed"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/lvlnone"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="None"
            tools:layout_editor_absoluteX="414dp"
            tools:layout_editor_absoluteY="186dp" />

        <RadioButton
            android:id="@+id/lvl1"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="1"
            tools:layout_editor_absoluteX="290dp"
            tools:layout_editor_absoluteY="186dp" />

        <RadioButton
            android:id="@+id/lvl2"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="186dp" />

        <RadioButton
            android:id="@+id/lvl3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="3"
            tools:layout_editor_absoluteY="186dp"
            tools:layut_editor_absoluteX="151dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/climbingRBG"
        android:layout_width="225dp"
        android:layout_height="232dp"
        app:layout_constraintStart_toStartOf="@+id/climbingTextView"
        app:layout_constraintTop_toBottomOf="@+id/climbingTextView">

        <RadioButton
            android:id="@+id/climbed_aloneRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Climbed Alone"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/was_assistedRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Was Assisted"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/partner_assistRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Assisted Partner"
            android:textSize="25dp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="118dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_height="132dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/radioyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yes"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radiono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No"
            android:textSize="25dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="4dp"
        android:text="Malfunctioned"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/climbingTextView"
        app:layout_constraintStart_toEndOf="@+id/climbingTextView" />

    <TextView
        android:id="@+id/climbingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="Climbing Method"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <ImageView
        android:id="@+id/levelOneRedBlock"
        android:layout_width="58dp"
        android:layout_height="33dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/redsquare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvlClimbed_text" />

    <ImageView
        android:id="@+id/levelTwoRedBlock"
        android:layout_width="55dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/redsquare"
        app:layout_constraintBottom_toBottomOf="@+id/levelThreeRedBlock"
        app:layout_constraintStart_toEndOf="@+id/levelThreeRedBlock" />

    <ImageView
        android:id="@+id/levelThreeRedBlock"
        android:layout_width="58dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/redsquare"
        app:layout_constraintBottom_toBottomOf="@+id/levelOneRedBlock"
        app:layout_constraintStart_toEndOf="@+id/levelOneRedBlock" />

    <ImageView
        android:id="@+id/levelOneBlueBlock"
        android:layout_width="62dp"
        android:layout_height="33dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/bluesquare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvlClimbed_text" />

    <ImageView
        android:id="@+id/levelTwoBlueBlock"
        android:layout_width="57dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/bluesquare"
        app:layout_constraintBottom_toBottomOf="@+id/levelThreeRedBlock"
        app:layout_constraintStart_toEndOf="@+id/levelThreeRedBlock" />

    <ImageView
        android:id="@+id/levelThreeBlueBlock"
        android:layout_width="55dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/bluesquare"
        app:layout_constraintBottom_toBottomOf="@+id/levelOneBlueBlock"
        app:layout_constraintStart_toEndOf="@+id/levelOneBlueBlock" />

    <EditText
        android:id="@+id/commentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="..."
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Comment:"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/climbingRBG"
        app:layout_constraintTop_toBottomOf="@+id/climbingRBG" />

    <Button
        android:id="@+id/resultButton"
        android:layout_width="131dp"
        android:layout_height="68dp"
        android:layout_marginTop="12dp"
        android:text="LOSE"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/pointsText"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points:"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/resultButton"
        app:layout_constraintStart_toStartOf="@+id/commentText" />

    <Button
        android:id="@+id/savematchbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Save Match"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultButton" />


</android.support.constraint.ConstraintLayout>
</ScrollView>